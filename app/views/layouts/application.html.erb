<!DOCTYPE html>
<html>
<head>
  <title>Muzik</title>
  <%= action_cable_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/js-cookie/2.1.0/js.cookie.min.js' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div class="nav-content">
      <div></div>
      <div class="logo-container">
        <p>MuzikChat</p>
      </div>
      <div class="new-user-container">
        <input type="text" class="js-user-name" placeholder="What is your name?">
        <button type="button" class="js-create-user">Create User</button>
      </div>
    </div>
  </nav>

  <%= yield %>

</body>
</html>
